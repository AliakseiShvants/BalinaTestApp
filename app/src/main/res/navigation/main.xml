<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/tabLayoutFragment">

    <fragment
        android:id="@+id/tabLayoutFragment"
        android:name="com.shvants.balinatestapp.view.fragment.TabLayoutFragment"
        android:label="TabLayoutFragment"
        tools:layout="@layout/fragment_tab_layout">

        <action
            android:id="@+id/action_tabLayoutFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/tabLayoutFragment"
            app:popUpToInclusive="true" />
        <!--        <action-->
        <!--            android:id="@+id/action_tabLayoutFragment_to_registerFragment"-->
        <!--            app:destination="@id/registerFragment" />-->
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.shvants.balinatestapp.view.fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">

    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.shvants.balinatestapp.view.fragment.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_login">

        <!--        <action-->
        <!--            android:id="@+id/action_registerFragment_to_mainFragment"-->
        <!--            app:destination="@id/mainFragment" />-->
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.shvants.balinatestapp.view.fragment.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_tabLayoutFragment"
            app:destination="@id/tabLayoutFragment" />
    </fragment>
</navigation>